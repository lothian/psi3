#!/bin/csh

# 
# This script automatically makes all necessary target directories,
# configures, compiles, and installs the complete PSI3.0 package.
#
# Change the variable 'prefix' below to your desired installation
# directory.
#

echo ... Beginning PSI3.2 installation ...

autoconf

# source distribution directory
set distdir = `pwd`

# installation directory
set prefix = /home/rking/psi3-bin

# machine architecture
set arch=`./bin/host.sh`

# compilation directory
set compdir = `pwd`/$arch

mkdir $compdir
cd $compdir
$distdir/configure --prefix=$prefix --verbose --with-cc="/usr/bin/gcc" --with-cxx="/usr/bin/g++" --with-blas="-lf77blas -latlas" --with-lapack="/usr/local/lib/lapack.a"
make
make install

echo ... PSI3.2 installation complete ...
