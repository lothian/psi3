
SHELL = /bin/sh

#
# Initialize variables that have been figured out by configure.
#

target = @target@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
incdir = @incdir@
docdir = @docdir@
manext = 1
mandir = @mandir@
htmldir = @htmldir@
txtdir = @txtdir@
datadir = @datadir@
top_srcdir = @top_srcdir@
top_objdir = @top_objdir@
objincdir = @objincdir@

RANLIB = @RANLIB@
YACC = @YACC@
CC = @CC@
CCDEPEND = @CCDEPEND@
DODEPEND = @DODEPEND@
CXX = @CXX@
FC = @FC@
LD = @FC@
MKDIRS = @MKDIRS@
INSTALL = @INSTALL@
INSTALL_INCLUDE = @INSTALL_INCLUDE@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@

PSIPP = @PSIPP@
TMPL = @TMPL@

CDEF = @CDEF@
COPT = @COPT@
COTH = @COTH@
CDBG = @CDBG@
CINC = @CINC@

CXXDEF = @CXXDEF@       
CXXOPT = @CXXOPT@
CXXOTH = @CXXOTH@
CXXDBG = @CXXDBG@
CXXINC = @CXXINC@

FDEF = @FDEF@
FOPT = @FOPT@
FOTH = @FOTH@
FDBG = @FDBG@
FINC = @FINC@
FSTATIC = @FSTATIC@

# flags to be passed to compilers
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
FFLAGS = @FFLAGS@
FFLAGS_NOSTATIC = $(FOPT) $(FOTH) $(FDBG)

# set up suffixes needed for various files
F77SUF = @F77SUF@
OBJSUF = @OBJSUF@
LIBSUF = @LIBSUF@

FLIBS = @FLIBS@
CLIBS = @CLIBS@
CXXLIBS = @CXXLIBS@
BLAS = @BLAS@

# where to find main for fortran programs
ALLOC = allocate.o
vpath allocate.o $(top_objdir)/lib:$(libdir)

# we are mostly compiling C programs here
LDFLAGS = 
LDLIBS = $(CLIBS)

# these are the most commonly used libraries
PSILIBS = libipv1.a libciomr.a

vpath %.a $(top_objdir)/lib:$(libdir)

#
# have target default to the name of the directory we're in
#
TARGET = $(shell basename `pwd`)

#
# Initialize other variables.
#
