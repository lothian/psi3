srcdir = @srcdir@
VPATH = @srcdir@

include ../MakeVars

LDLIBS += $(LAPACK) $(BLAS)

PSILIBS = libPSI_qt.a libPSI_chkpt.a libPSI_iwl.a -lPSI_psio libPSI_ciomr.a libPSI_ipv1.a

CSRC = get_mo_info.c ints.c setup_io.c params.c read_dens.c \
read_lag.c ref_orbs.c f_act.c gradient.c hessian.c step.c \
thetas.c cleanup.c diis.c test_bfgs.c

CXXSRC = detcas.cc indpairs.cc

BINOBJ = $(CSRC:%.c=%.o) $(CXXSRC:%.cc=%.o)

include ../MakeRules

ifneq ($(DODEPEND),no)
$(BINOBJ:%.o=%.d): $(DEPENDINCLUDE)
include $(BINOBJ:%.o=%.d)
endif

install_man:: detcas.1
	$(MKDIRS) $(mandir)/man1
	$(INSTALL_INCLUDE) $^ $(mandir)/man1
