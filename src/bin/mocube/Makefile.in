srcdir = @srcdir@
VPATH = @srcdir@

include ../MakeVars

LDLIBS += $(LAPACK) $(BLAS)

PSILIBS = -lPSI_qt -lPSI_chkpt -lPSI_iwl -lPSI_psio -lPSI_ciomr -lPSI_ipv1

CXXSRC = mocube.cc delta.cc phi.cc

BINOBJ = $(CXXSRC:%.cc=%.o)

include ../MakeRules

ifneq ($(DODEPEND),no)
$(BINOBJ:%.o=%.d): $(DEPENDINCLUDE)
include $(BINOBJ:%.o=%.d)
endif

install_man:: mocube.1
	$(MKDIRS) $(DESTDIR)$(mandir)/man1
	$(INSTALL_INCLUDE) $^ $(DESTDIR)$(mandir)/man1

