srcdir = @srcdir@
VPATH = @srcdir@

include ../MakeVars

LD = $(CXX)
LDLIBS += $(LAPACK) $(BLAS)
CDEF += -DUSE_BLAS

PSILIBS = -lPSI_iwl -lPSI_qt -lPSI_chkpt -lPSI_psio -lPSI_ciomr -lPSI_ipv1

CSRC = \
gprgid.c \
semicanonical.c \
transform_one.c \
transform_two.c \
transform_two_mp2.c \
transform_two_mp2r12a_gr.c \
transform_two_mp2r12a_t.c \
transform_two_uhf.c \
transform_two_backtr_uhf.c \
yoshimine.c \
frozen_core.c \
backsort.c \
cleanup.c

CXXSRC = transqt.cc

BINOBJ = $(CSRC:%.c=%.o) $(CXXSRC:%.cc=%.o)

include ../MakeRules

ifneq ($(DODEPEND),no)
$(BINOBJ:%.o=%.d): $(DEPENDINCLUDE)
include $(BINOBJ:%.o=%.d)
endif

install_man:: transqt.1
	$(MKDIRS) $(mandir)/man1
	$(INSTALL_INCLUDE) $^ $(mandir)/man1

