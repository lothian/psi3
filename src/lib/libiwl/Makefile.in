
srcdir = @srcdir@
VPATH = @srcdir@

include ../MakeVars

CDEF += -DBUFF=0 -DSITEDIR=\"$(datadir)\"

TARGET = $(top_objdir)/lib/libPSI_iwl.a

TRUESRC = \
buf_close.c   buf_rd_all_act.c      buf_wrt_arr2.c          buf_wrt_val_SI.c \
buf_fetch.c   buf_rd_all_mp2r12a.c  buf_wrt_arr_SI.c        rdone.c \
buf_flush.c   buf_rd_arr.c          buf_wrt_arr_SI_nocut.c  rdtwo.c \
buf_init.c    buf_rd_arr2.c         buf_wrt_mat.c           sortbuf.c \
buf_put.c     buf_wrt.c             buf_wrt_mp2.c           wrtone.c \
buf_rd.c      buf_wrt_all.c         buf_wrt_mp2r12a.c       wrttwo.c \
buf_rd_all.c  buf_wrt_arr.c         buf_wrt_val.c           buf_toend.c


DEPENDINCLUDE = iwl.h

LIBOBJ = $(TRUESRC:%.c=%.o)

include ../MakeRules

ifneq ($(DODEPEND),no)
include $(LIBOBJ:%.o=%.d)
endif

install_inc:: iwl.h
	$(MKDIRS) $(incdir)/libiwl
	$(INSTALL_INCLUDE) $^ $(incdir)/libbiwl

install_man:: libiwl.txt
	$(MKDIRS) $(txtdir)
	$(INSTALL_INCLUDE) $^ $(txtdir)

